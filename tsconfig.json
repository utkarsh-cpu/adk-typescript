{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/agents/*": ["agents/*"],
      "@/tools/*": ["tools/*"],
      "@/models/*": ["models/*"],
      "@/flows/*": ["flows/*"],
      "@/memory/*": ["memory/*"],
      "@/sessions/*": ["sessions/*"],
      "@/artifacts/*": ["artifacts/*"],
      "@/auth/*": ["auth/*"],
      "@/events/*": ["events/*"],
      "@/errors/*": ["errors/*"],
      "@/utils/*": ["utils/*"],
      "@/react-native/*": ["react-native/*"]
    },
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "ts-node": {
    "esm": true
  }
}